<%= semantic_form_for [:admin, @recapitulation] do |f| %>
  <%= f.inputs do %>
    <%= f.input :periode, :as => :select, :collection => ['2012', '2013', '2014'] %>
    
    <%= f.input :keterangan_pembuka, :label => "Keterangan Pembuka" %>
    
    <%= f.input :keterangan_penutup, :label => "Keterangan Penutup" %>
  
  <% end %>
  
  <%= f.actions do %>
    <%= f.action :submit, :label => "Simpan" %>
  <% end %>
  
<% end %>